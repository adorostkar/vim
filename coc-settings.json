{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
		"rust": {
			"command": "ra_lsp_server",
			"filetypes": ["rust"],
			"rootPatterns": ["Cargo.toml"]
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		},
		"golang": {
			"command": "/home/ashkan/go/src/golang.org/x/tools/gopls/gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"]
		}
	}
}
